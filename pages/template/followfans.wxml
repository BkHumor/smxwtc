<template name="listHeader">
    <view class="list_header" style='padding-bottom:0rpx'>
        <view class="list_header_left">
            <image bindtap="gotouser"  data-uid="{{uid}}" mode="aspectFill" src="{{userPic}}"></image>
            <view bindtap="gotouser" class="nickname" data-uid="{{uid}}">{{userNick}}</view>
           
        </view>
  <view class="list_header_right"><image wx:if="{{status == 0}}" bindtap="tofollow" src="../../images/add_fans.png"  style="width:25px;height:25px;display:inline-block;margin-right:5px;"></image> <image  bindtap="tounfollow"  wx:if="{{status == 1}}" src="../../images/over_fans.png"  style="width:25px;height:25px;display:inline-block;margin-right:5px;"></image><image wx:if="{{status == 2}}" bindtap="tofollow" src="../../images/eachother.png"  style="width:25px;height:25px;display:inline-block;margin-right:5px;"></image></view>
    </view>
     <view style="font-size:12px;color:#ccc" wx:if="brief.length==0">本宝宝暂时还木有想到个性签名</view>
     <view  style="font-size:12px;color:#ccc" wx:else>{{brief}}</view>
</template>