page {
  position: relative;
  background: #f2f2f2;
  padding-bottom: 80rpx;
}
.index_list_nav {
  background: #fff;
  margin-bottom: 30rpx;
  padding: 40rpx 40rpx;
  overflow: hidden;
  border-bottom: 1px solid #ededee;
  border-top: 1px solid #ededee;
}

.list_header_left image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
  float: left;
  border-radius: 40rpx;
  overflow: hidden;
}

.list_header view {
  float: left;
  line-height: 80rpx;
  color: #1e1e1e;
  font-size: 16px;
}

.list_header  .list_header_right {
  float: right;
  color: #999;
  font-size: 12px;
}

.list_header {
  padding-bottom: 18rpx;
  overflow: hidden;
}

.listPic {
  width: 50%;
  height: 360rpx;
  margin-bottom: 16rpx;
}

.listTitle {
  font-size: 18px;
  color: #1e1e1e;
  margin-bottom: 16rpx;
}

.listContent {
  line-height: 19px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #646464;
  font-size: 16px;
  margin-bottom: 16rpx;
  max-height: 36px;
}
.list_footer {
  overflow: hidden;
  height:120rpx;
  line-height:190rpx;
  margin-top: -8px;
}
.list__footer {
  overflow: hidden;
  height:60rpx;
  line-height:80rpx;
  margin-top: -8px;
}
.agree_1, .commNum,.agree_0 {
  float:right;
  
}
.commNum {
  margin-right : 20px;
}
.agree_1 image, .commNum image {
  width: 20px;
  height: 20px;
}
.agree_0 image {
   width: 20px;
  height: 20px;
}

.bt-img{
  width: 40px;
  height: 40px;
  transform: scale(1);
  -webkit-transform: scale(1);
  -webkit-transition:ease all;
  -moz-transition:ease all;
  transition:ease all;
  -webkit-transition-duration:700ms;
  -moz-transition-duration:700ms;
  transition-duration:700ms;
  
}
.addr_icon{
   width: 23rpx;
  height: 23rpx;
  vertical-align: middle;
}
.addr_info{
  line-height: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
  font-family:"PingFangSC-Regular","sans-serif","STHeitiSC-Light","微软雅黑","Microsoft YaHei";
  font-size: 24rpx;
  color:lightblue;
}
.hidden{
  display: none;
}
@keyframes myfirst {
  from {
    bottom: -320rpx;
  }

  to {
    bottom: 0px;
  }
}

.toComment {
  width: 100%;
  height: 104rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  padding-top: 8rpx;
}

.toComment input, .comment_box input {
  background: #fff;
  height: 72rpx;
  margin-top: 15rpx;
  line-height: 72rpx;
  width: 80%;
  padding: 0 10rpx;
  box-sizing: border-box;
  border-radius: 2px;
  margin-left: 30rpx;
}

.toComment input {
  background: #f0f0f0;
}

.toComment button, .comment_box button {
  position: absolute;
  right: 0px;
  top: 24rpx;
  padding: 0;
  font-size: 16px;
  height: 72rpx;
  width: 120rpx;
  border: 0px;
  background: none;
  line-height: 72rpx;
  border: 0 none;
}

.toComment button::after, .comment_box button::after {
  border: 0 none;
}

.comment_box button {
  top: 15rpx;
  right: 5rpx;
}

.comment_layer, .Response_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: #000;
  z-index: 1;
  opacity: 0.5;
}

.toComment .comments {
  float: left;
  height: 64rpx;
  width: 75%;
  margin-left: 30rpx;
  line-height: 64rpx;
  color: #ccc;
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 32rpx;
  font-size: 12px;
  text-indent: 1em;
}

.comment_box {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  width: 100%;
  background: #f0f0f0;
  box-sizing: border-box;
  animation: myfirst 0.2s;
  height: 104rpx;
  padding-top: 3rpx;
}

.comment_list .list_header image {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-right: 8rpx;
  border-radius: 30rpx;
}

.comment_list .list_header view {
  line-height: 60rpx;
  color: #a8a8a8;
}

.comment_list .list_header .list_header_left view {
  color: #666;
}

.comment_list .comment_content, .comment_child_box .comment_content {
  font-size: 14px;
  line-height: 36rpx;
  padding-left: 70rpx;
}

.comment_content view {
  float: left;
}

.comment_content {
  color: #1e1e1e;
}

.response_comment {
  padding-right: 8rpx;
}

.response_comment .float_none {
  color: #bf925c;
}

.toRespone {
  font-size: 12px;
  color: #bf925c;
  float: right;
}

.comment_list .list {
  padding: 10rpx 0;
  overflow: hidden;
}

.activity {
  font-family:"PingFangSC-Regular","sans-serif","STHeitiSC-Light","微软雅黑","Microsoft YaHei";
  font-size: 35rpx;
  color:rgb(136, 136, 136);
  padding-left: 30rpx;
  margin-top: 20rpx;
  background: white;
  padding-bottom:22rpx;
  padding-top:20rpx;

}
.activity .post_sub {
  border-left:3px solid cornflowerblue;
}
.post_none {
  margin: 20px auto;
}